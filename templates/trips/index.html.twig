{% extends 'search/index.html.twig' %}

{% block title %}Mano kelionės{% endblock %}

{% block content %}
    {% if (is_granted("IS_AUTHENTICATED_REMEMBERED")) %}
        <div class="row search-wrap">
            <div class="col-xl-8 reserve-block">
                <h5>Mano kelionės</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xl-8 goBack">
                <a href="javascript:history.back()" class="itemData"><i class="fas fa-long-arrow-alt-left"></i> Atgal</a>
            </div>
        </div>
        <div class="row light-bg booking-details_wrap">
            <div class="booking-checkbox_wrap col-xl-8">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- Nav tabs -->
                            <div class="tabs">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#trips" data-toggle="tab">Jūsų skelbimai</a></li>
                                    <li><a href="?reservation" data-toggle="tab">Jūsų rezervacijos</a></li>
                                    <li><a href="#yourReservation" data-toggle="tab">Kelionių užklausos</a></li>
                                    <li><a href="#offers" data-toggle="tab">Pasiūlymai rezervuoti</a></li>
                                </ul>

                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane active" id="trips">
                                        {% for trip in trips if trips is defined %}
                                            <div class="row tab-list-row">
                                                <div class="col-sm-1 adw-col" style="margin:auto;">
                                                    {% if trip.travelerType == constant('TYPE_DRIVER', trip) %}
                                                        <i class="fa fa-car tabs-icon"></i>
                                                    {% endif %}
                                                    {% if trip.travelerType == constant('TYPE_PASSENGER', trip) %}
                                                        <i class="fas fa-child tabs-icon"></i>
                                                    {% endif %}
                                                </div>
                                                <div class="col-sm-4 info">

                                                    <span class="fas fa-map-marker-alt"></span> {{ trip.departFrom }}
                                                    <div class="arrow-down"><span class="fas fa-long-arrow-alt-down"></span></div>
                                                    <span class="fas fa-map-marker-alt green-marker"></span> {{ trip.destination }}

                                                </div>
                                                <div class="col-sm-2 info">
                                                    <div class="reserve-description"><span class="far fa-calendar-alt"></span> {{ trip.departTime|date("Y-m-d") }}</div>
                                                    <div class="reserve-description"><span class="fas fa-clock"></span> {{ trip.departTime|date("H:i") }}</div>

                                                </div>
                                                <div class="col-xl-3 info">
                                                    {% set seats = trip.seats %}
                                                    {% for reservation in reservations if reservation.trip == trip and reservation.status == constant('App\\Controller\\ReservationController::CONFIRMED') and reservation.type is null %}
                                                        {% set seats = seats - reservation.seats %}
                                                        {% for i in 1..reservation.seats %}
                                                            {% if reservation.User.avatar is not null %}
                                                                <img src="{{ reservation.User.avatar }}" title="{{ reservation.user }}  {{ reservation.User.email }}" class="customer-img-reservation" >
                                                            {% else %}
                                                                <img src="/images/avatar.png" title="{{ reservation.user }}  {{ reservation.User.email }}" class="customer-img-reservation" >
                                                            {% endif %}
                                                        {% endfor %}
                                                    {% endfor %}
                                                    {% for i in 1..seats if seats > 0 %}
                                                        <i class="material-icons img-reservation-free">airline_seat_recline_extra</i>
                                                    {% endfor %}
                                                </div>
                                                <div class="col-xl-2 adw-col info">
                                                    <a class="btn btn-outline-dark" href = "{{ path('trip_show', {'id': trip.id}) }}"><i class="fas fa-eye"></i></a>
                                                    <a href="{{ path('trip_edit', {'id': trip.id}) }}" title="Redaguoti" class="btn btn-outline-dark" alt="Redaguoti"><i class="fas fa-edit"></i></a>
                                                    <a href="{{ path('trip_delete', {'id': trip.id}) }}" title="Ištrinti" class="btn btn-outline-dark" alt="Ištrinti"><i class="fas fa-trash-alt"></i></a>
                                                </div>
                                            </div>

                                        {% else %}
                                            <div class="row ml-1 tabs-text">
                                                Skelbimų nėra.
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="reservation">
                                        {% for reservation in reservations if reservation and reservation.status is null and reservation.type is null %}
                                            <div class="row adw-list-row" style="border-bottom:1px solid #e9e7ed;">
                                                <div class="col-4 info">
                                                    <span class="fas fa-map-marker-alt"></span> {{ reservation.Trip.departFrom }}
                                                    <div class="arrow-down"><span class="fas fa-long-arrow-alt-down"></span></div>
                                                    <span class="fas fa-map-marker-alt green-marker"></span> {{ reservation.Trip.destination }}
                                                </div>
                                                <div class="col-2 info">
                                                    <div class="reserve-description"><span class="far fa-calendar-alt"></span> {{ reservation.Trip.departTime|date("Y-m-d") }}</div>
                                                    <div class="reserve-description"><span class="fas fa-clock"></span> {{ reservation.Trip.departTime|date("H:i") }}</div>

                                                </div>
                                                <div class="col-4 info">
                                                    {{ reservation.User}}<br>  <i class="material-icons">airline_seat_recline_extra</i> {{ reservation.seats }}<br>{{ reservation.User.email }}
                                                </div>
                                                <div class="col-2 info">
                                                    <a href="{{ path('reservation_confirmed', {'id': reservation.id}) }}" title="Patvirtinti" class="btn btn-outline-dark" alt="Patvirtinti"><i class="fas fa-handshake"></i></a>
                                                    <a href="{{ path('reservation_reject', {'id': reservation.id}) }}" title="Atmesti" class="btn btn-outline-dark" alt="Atmesti"><i class="fas fa-times"></i></a>

                                                </div>
                                            </div>
                                        {% else %}
                                             <div class="row ml-1 tabs-text">
                                                 Šiuo metu jūs neturite naujų rezervacijų
                                             </div>
                                        {% endfor %}
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="yourReservation">
                                        {% for yourReservation in yourReservations if yourReservation is defined %}
                                            <div class="row adw-list-row" style="border-bottom:1px solid #e9e7ed;">
                                                <div class="col-4 info">
                                                    <span class="fas fa-map-marker-alt"></span> {{ yourReservation.Trip.departFrom }}
                                                    <div class="arrow-down"><span class="fas fa-long-arrow-alt-down"></span></div>
                                                    <span class="fas fa-map-marker-alt green-marker"></span> {{ yourReservation.Trip.destination }}
                                                </div>
                                                <div class="col-2 info">
                                                    <div class="reserve-description"><span class="far fa-calendar-alt"></span> {{ yourReservation.Trip.departTime|date("Y-m-d") }}</div>
                                                    <div class="reserve-description"><span class="fas fa-clock"></span> {{ yourReservation.Trip.departTime|date("H:i") }}</div>
                                                </div>
                                                <div class="col-2 info">
                                                    <i class="material-icons">airline_seat_recline_extra</i> {{ yourReservation.seats }}
                                                </div>
                                                <div class="col-3 info">
                                                    {{ yourReservation.Trip.user }}<br>
                                                    {{ yourReservation.Trip.phone }}<br>
                                                    {{ yourReservation.Trip.User.email }}
                                                </div>
                                                <div class="col-1 info">
                                                    {% if yourReservation.status ==  constant('App\\Controller\\ReservationController::REJECTED') %}
                                                       <b>Statusas: </b><span style="color:red">Atmesta</span>
                                                    {% elseif yourReservation.status ==  constant('App\\Controller\\ReservationController::CONFIRMED') %}
                                                        <b>Statusas: </b><span style="color:green">Patvirtinta</span>
                                                    {% else %}
                                                        <b>Statusas: </b>Nepatvirtinta
                                                    {% endif %}
                                                </div>
                                            </div>
                                        {% else %}
                                            <div class="col-12 row ml-1 tabs-text">
                                                Dar nepasirinkote vairuotojų.
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div role="tabpanel" class="tab-pane" id="offers">
                                        {% for reservation in reservations if reservation and reservation.type == constant('App\\Controller\\ReservationController::OFFER_TYPE') %}
                                            <div class="row adw-list-row" style="border-bottom:1px solid #e9e7ed;">
                                                <div class="col-4 info">
                                                    <span class="fas fa-map-marker-alt"></span> {{ reservation.Trip.departFrom }}
                                                    <div class="arrow-down"><span class="fas fa-long-arrow-alt-down"></span></div>
                                                    <span class="fas fa-map-marker-alt green-marker"></span> {{ reservation.Trip.destination }}
                                                </div>
                                                <div class="col-2 info">
                                                    <div class="reserve-description"><span class="far fa-calendar-alt"></span> {{ reservation.Trip.departTime|date("Y-m-d") }}</div>
                                                    <div class="reserve-description"><span class="fas fa-clock"></span> {{ reservation.Trip.departTime|date("H:i") }}</div>

                                                </div>
                                                <div class="col-4 info">
                                                    {{ reservation.User}}<br>{{ reservation.User.email }}<br>
                                                </div>
                                                <div class="col-2 info">
                                                    <a href="{{ path('trip_show', {'id': reservation.offer}) }}" title="Rezervuoti" class="btn btn-outline-dark">Rezervuoti</a>
                                                    <a href="{{ path('reservation_reject', {'id': reservation.id}) }}" title="Atmesti" class="btn btn-outline-dark" alt="Atmesti"><i class="fas fa-times"></i></a>

                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <script src="{{ asset('build/js/app.js') }}"></script>
    <script>
            $('.nav-tabs > li:first-child > a')[0].click();
    </script>
{% endblock %}





