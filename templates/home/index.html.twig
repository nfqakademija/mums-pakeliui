{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-1"></div>
        <div class="col-4">
            <div align="justify">
                <h5>Vykstate į kitą gatvę, kitą miestą ar kitą šalį?</h5>
                <h5>Pakeleivių rasite užpildę šiuos laukus:</h5>
            </div>

            <form method="GET" action="{{ path('search') }}">
                {{ form_row(form.departFrom, {attr: {class: '','placeholder': 'Įrašykite išvykimo adresą'} }) }}

                {{ form_row(form.destination, {attr: {class: '','placeholder': 'Įrašykite atvykimo adresą'} }) }}

                <button type="submit" class="btn btn-outline-dark mt-2">Filtruoti</button>
            </form>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <div align="justify">
                <h5>Neradote pakeleivių?</h5>
                <h5>Sukurkite savo skelbimą!</h5>
            </div>
            <a class="btn btn-outline-dark" href = "{{ path('add_edit_trip') }}">Kurti skelbimą</a>
        </div>
        <div class="col-3"></div>
    </div>
{% endblock %}